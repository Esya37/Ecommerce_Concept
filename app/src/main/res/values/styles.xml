<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Text">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/ripple_effect</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonSmall" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_btn_accept</item>
        <item name="android:padding">@dimen/padding_icon_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="ButtonLarge" parent="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/background_btn_accept</item>
        <item name="android:padding">@dimen/padding_icon_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="android:textSize">@dimen/font_larger</item>
    </style>

    <style name="RoundedBackground">
        <item name="android:elevation">20dp</item>
        <item name="android:background">@drawable/background_filter_dialog</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/corn_flower_blue</item>
    </style>
</resources>